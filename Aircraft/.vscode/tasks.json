{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "build-and-run",
        "type": "shell",
        "command": "g++",
        "args": [
            "*.cpp",
            "-std=c++20",
            "-o",
            "program"
        ],
        "group": "build",
        "problemMatcher": [
            "$gcc"
        ],
        "detail": "Compila tudo"
    },
    {
        "label": "run",
        "type": "shell",
        "command": "./program",
        "dependsOn": "build-and-run",
        "problemMatcher": [],
        "detail": "Roda ap√≥s compilar"
    },
    {
        "type": "cppbuild",
        "label": "C/C++: clang build active file",
        "command": "/usr/bin/clang",
        "args": [
            "-fcolor-diagnostics",
            "-fansi-escape-codes",
            "-g",
            "*.cpp",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
            "cwd": "${fileDirname}"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "detail": "Task generated by Debugger."
    }
]
}
